{
  "extends": "tslint-config-airbnb",
  "linterOptions": {
    "exclude": [
      "**/node_modules"
    ]
  },
  "rules": {
    "no-boolean-literal-compare": true,
    "import-name": false,
    "object-shorthand-properties-first": false,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"]
  }
}